<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoRPi"
             x:Class="AutoRPi.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Device" Order="Secondary" Clicked="AddDevice_Clicked"/>
        <ToolbarItem Text="About" Order="Secondary" Clicked="About_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout x:Name="stackLayout" Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="RPi Name" PlaceholderColor="LightGray" Text="" x:Name="rpiNameEntry" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="connectBtn" Text="Connect" HorizontalOptions="FillAndExpand" BackgroundColor="LightGreen" Clicked="ConnectBtn_Clicked"/>
            </StackLayout>

            <Button x:Name="sendBtn" Text="Send" Clicked="SendBtn_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>