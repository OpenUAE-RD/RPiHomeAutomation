<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoRPi"
             x:Class="AutoRPi.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Device" Order="Secondary"/>
        <ToolbarItem Text="About" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout x:Name="stackLayout">
        
        <StackLayout Orientation="Horizontal">
        <Entry Text="" x:Name="rpiNameEntry" HorizontalOptions="FillAndExpand"/>
        <Button x:Name="connectBtn" Text="Connect" HorizontalOptions="FillAndExpand" BackgroundColor="LightGreen" Clicked="connectBtn_Clicked"/>
        </StackLayout>
        
        <Button x:Name="sendBtn" Text="Send" Clicked="SendBtn_Clicked"/>
    </StackLayout>
</ContentPage>